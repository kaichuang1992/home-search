<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <bean id="appProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="singleton" value="true"/>
        <property name="ignoreResourceNotFound" value="true"/>
        <property name="locations">
            <list>
                <value>classpath:application.properties</value>
            </list>
        </property>
    </bean>


    <bean id="elasticClient" class="net.sourceforge.homesearch.dao.ElasticClient" init-method="init"
          destroy-method="destroy">
        <property name="properties" ref="appProperties"/>
    </bean>

    <bean id="watchService" class="net.sourceforge.homesearch.service.WatchService"
          init-method="init" destroy-method="destroy">
        <property name="watchedDir" value="content"/>
        <property name="recursive" value="true"/>
    </bean>


</beans>
